<!DOCTYPE html>
<html>
  <head>
    <title>Student List</title>
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/students/create">Create Student</a></h3>
      <h1>Student List</h1>
      <% if(students.length>0) { %>
      <table class="list-table">
        <thead>
          <tr>
            <th>Student Name</th>
            <th>Standard</th>
           
          </tr>
        </thead>
        <tbody>

          <% for(var i=0; i<students.length;i++) { %>
            <tr>
              <td><a href="/students/show/<%= students[i]._id%>">
              <%= students[i].name %></a></td>
              <td><%= students[i].standard %></td>
             
            </tr>
          <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No students found.</div>
      <% } %>
    </div>
  </body>
</html>
